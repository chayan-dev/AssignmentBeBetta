<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_bg_rounded"
    android:layout_marginEnd="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivTeam1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        app:srcCompat="@drawable/ic_espanyol"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTeam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Espanyol"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/ivTeam1"
        app:layout_constraintStart_toStartOf="@id/ivTeam1"
        app:layout_constraintEnd_toEndOf="@id/ivTeam1"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvScore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTeam1"
        app:layout_constraintStart_toStartOf="@id/ivTeam1"
        app:layout_constraintEnd_toEndOf="@id/ivTeam1"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VS"
        android:textColor="#80EAEAEA"
        app:layout_constraintTop_toTopOf="@id/ivTeam1"
        app:layout_constraintBottom_toBottomOf="@id/ivTeam1"
        app:layout_constraintStart_toEndOf="@id/ivTeam1"
        app:layout_constraintEnd_toStartOf="@id/ivTeam2"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivTeam2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        app:srcCompat="@drawable/ic_espanyol"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTeam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Espanyol"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/ivTeam2"
        app:layout_constraintStart_toStartOf="@id/ivTeam2"
        app:layout_constraintEnd_toEndOf="@id/ivTeam2"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTeam2"
        app:layout_constraintStart_toStartOf="@id/ivTeam2"
        app:layout_constraintEnd_toEndOf="@id/ivTeam2"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMinsPlayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="72 min"
        app:layout_constraintTop_toTopOf="@id/tvScore1"
        app:layout_constraintBottom_toBottomOf="@id/tvScore1"
        app:layout_constraintStart_toEndOf="@id/ivTeam1"
        app:layout_constraintEnd_toStartOf="@id/ivTeam2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@drawable/gray_half_rounded_bg"
        android:text="BET NOW"
        android:textStyle="bold"
        android:textColor="#EFEFEF"
        android:gravity="center"
        android:shadowColor="#40000000"
        app:layout_constraintTop_toBottomOf="@id/tvScore1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>